<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Style.css?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controller">

    <MenuBar fx:id="menuBar">
        <stylesheets>
            <URL value="@/client/css/Style.css" />
        </stylesheets>
        <menus>
            <Menu fx:id="menu" text="Тема чата"  disable="true">
                <items>
                    <CheckMenuItem fx:id="style1" selected="true" text="codeStyle" onAction="#themeCode"/>
                    <CheckMenuItem fx:id="style2" text="prettyStyle" onAction="#themePretty"/>
                </items>
            </Menu>
            <Menu fx:id="menu2" text="Начало работы">
                <items>
                    <CheckMenuItem fx:id="auth" selected="true" text="Авторизация" onAction="#setAuthForm"/>
                    <CheckMenuItem fx:id="reg" text="Регистрация" onAction="#setRegForm"/>
                </items>
            </Menu>
        </menus>

    </MenuBar>

    <!--верхняя панель для авторизации-->
    <VBox fx:id="authForm">
        <Label>Авторизация:</Label>
        <HBox fx:id="upperPanel">
            <TextField fx:id="loginFiled" promptText="Логин" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="passwordField" onAction="#tryToAuth" promptText="Пароль" />
            <Button onAction="#tryToAuth" text="Войти" HBox.hgrow="ALWAYS" style="-fx-background-color: #3c3f41; -fx-text-fill: #bbbbbb"/>
        </HBox>
    </VBox>

    <VBox fx:id="regForm" disable="true">
        <Label>Регистрация:</Label>
        <HBox fx:id="upperPanel2" >
            <TextField fx:id="loginFiled2" promptText="Логин" HBox.hgrow="ALWAYS" />
            <PasswordField fx:id="passwordField2" onAction="#tryToReg" promptText="Пароль" />
            <TextField fx:id="nickField" onAction="#tryToReg" promptText="Ник" HBox.hgrow="ALWAYS" />

        </HBox>
        <Button onAction="#tryToReg" text="Регистрация" style="-fx-background-color: #3c3f41; -fx-text-fill: #bbbbbb"/>
    </VBox>
    <Label fx:id="serviceMsg" managed="false" visible="false"></Label>
    <HBox fx:id="mainField" managed="false" visible="false" VBox.vgrow="ALWAYS">
        <VBox fx:id="messageArea" HBox.hgrow="ALWAYS" >
            <Label fx:id="nickAuth" managed="false" visible="false"></Label>

        </VBox>
        <Separator orientation="VERTICAL"></Separator>
        <Separator orientation="VERTICAL"></Separator>
        <VBox fx:id="rightVBox">

                <Label>Сейчас в сети:</Label>
                <ListView fx:id="onlineArea" />
                <Label>Ваш черный список:</Label>
                <ListView fx:id="blackListArea" />

        </VBox>
    </HBox>

    <!--нижняя панель для отправки сообщений-->
    <HBox fx:id="bottomPanel" managed="false" visible="false">
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Тут может быть ваше сообщение" HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" text="Send" textFill="WHITE" />
    </HBox>

</VBox>
