<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?scenebuilder-stylesheet /css/Style.css?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
            fx:controller="mainFX.Controller">
    <stylesheets>
        <URL value="@/mainFX/css/Style.css" />
    </stylesheets>
    <VBox fx:id="mainBox">
        <HBox>
            <Button fx:id="connectBtn" text="Подключиться к БД" onAction="#connect"/>
            <ImageView fx:id="imageViewGreen" layoutX="29.0" layoutY="44.0" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" visible="false" managed="false">
                <image>
                    <Image url="/mainFX/images/greenmark.png" />
                </image>
            </ImageView>
        </HBox>
        <HBox fx:id="boxTableDB" visible="false0" managed="false">
            <ComboBox fx:id="comboTableDB" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox fx:id="mainTableBox" visible="false" managed="false">
            <VBox fx:id="currentTableBox" >
                <Label fx:id="tableNameInfo" />
                <TableView fx:id="currentTableView"></TableView>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
